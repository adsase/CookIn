<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#bbbbbb"
    tools:context="com.example.cooking.Fragments.Avanzadas" >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#ffffff"
            android:layout_weight="0.16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Por Duración:"
                android:id="@+id/textView"
                android:gravity="center_vertical"
                android:layout_weight="0.80"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="7dp" />

            <Spinner
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:id="@+id/spDuracionAvanzadas"
                android:layout_weight="0.20" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:layout_weight="0.16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Por Dificultad:"
                android:id="@+id/textView2"
                android:layout_weight="0.80"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical" />

            <Spinner
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:id="@+id/spDificultadAvanzadas"
                android:layout_weight="0.20" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:layout_weight="0.16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Por Zona Geográfica:"
                android:id="@+id/textView3"
                android:layout_weight="0.24"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical" />

            <Spinner
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:id="@+id/spZonaAvanzadas"
                android:layout_weight="0.20" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:layout_weight="0.16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Por Alimento:"
                android:id="@+id/textView4"
                android:layout_weight="0.80"
                android:layout_marginLeft="7dp"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:id="@+id/spAlimentoAvanzadas"
                android:layout_weight="0.20" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_weight="0.16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tipo Alimento:"
                android:id="@+id/textView5"
                android:layout_weight="0.80"
                android:layout_marginLeft="7dp"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:id="@+id/spTipoAlimentoAvanzadas"
                android:layout_weight="0.20" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800"
            android:layout_weight="0.16"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Buscar"
                android:id="@+id/textViewBuscar"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>